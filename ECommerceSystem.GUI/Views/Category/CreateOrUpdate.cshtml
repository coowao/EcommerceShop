@model ECommerceSystem.Shared.DTOs.Category.CategoryDTO
@{
    ViewData["Title"] = ViewBag.IsEdit ? "Sửa danh mục" : "Thêm danh mục";
}
<h2>@ViewData["Title"]</h2>
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
<form asp-action="CreateOrUpdate" method="post">
    @Html.AntiForgeryToken()
    @if (Model.Id > 0)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">Hủy</a>
    </div>
</form>
@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.validate.unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}