@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-4">Bảng điều khiển quản trị</h2>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Thống kê doanh thu</h5>
                    <a href="/api/admin/statistics?type=revenue&period=month" class="btn btn-primary w-100">Xem thống kê</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Tồn kho sản phẩm</h5>
                    <a href="/api/admin/inventory" class="btn btn-warning w-100">Xem tồn kho</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Hoạt động người dùng</h5>
                    <a href="/api/admin/user-activity" class="btn btn-info w-100">Xem hoạt động</a>
                </div>
            </div>
        </div>
    </div>
</div>
