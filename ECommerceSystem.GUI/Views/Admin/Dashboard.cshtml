@{
    ViewData["Title"] = "Dashboard Quản Trị";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f6f9;
            margin: 0;
            padding: 0;
            color: #333;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            padding: 20px;
        }

        .sidebar {
            width: 250px;
            background-color: #2c3e50;
            color: white;
            height: 100vh;
            position: fixed;
            padding: 20px;
            box-sizing: border-box;
        }

            .sidebar h3 {
                margin-top: 0;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
            }

                .sidebar ul li {
                    padding: 10px 0;
                }

                    .sidebar ul li a {
                        color: white;
                        text-decoration: none;
                        font-size: 16px;
                    }

                        .sidebar ul li a:hover {
                            color: #1abc9c;
                        }

        .main-content {
            margin-left: 270px;
            padding: 20px;
        }

        .header {
            background-color: #ffffff;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .header h2 {
                margin: 0;
                color: #2c3e50;
            }

        .user-info {
            font-size: 14px;
        }

        .cards {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
        }

        .card {
            background-color: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 200px;
            text-align: center;
        }

            .card h3 {
                color: #2c3e50;
                margin: 0 0 10px;
            }

            .card p {
                color: #7f8c8d;
                margin: 0;
            }
    </style>
</head>
<body>
    <div class="sidebar">
        <h3>Menu</h3>
        <ul>
            <li><a href="#">Tổng quan</a></li>
            <li><a href="#">Quản lý Người dùng</a></li>
            <li><a href="#">Quản lý Sản phẩm</a></li>
            <li><a href="#">Báo cáo</a></li>
            <li><a asp-action="Logout" asp-controller="Account">Đăng xuất</a></li>
        </ul>
    </div>
    <div class="main-content">
        <div class="header">
            <h2>Dashboard Quản Trị</h2>
            <div class="user-info">
                <p>Chào mừng bạn, Admin! <br /> Thời gian: @DateTime.Now.ToString("hh:mm tt dd/MM/yyyy")</p>
            </div>
        </div>
        <div class="cards">
            <div class="card">
                <h3>100</h3>
                <p>Tổng Người dùng</p>
            </div>
            <div class="card">
                <h3>50</h3>
                <p>Sản phẩm</p>
            </div>
            <div class="card">
                <h3>200</h3>
                <p>Đơn hàng</p>
            </div>
        </div>
    </div>
</body>
</html>